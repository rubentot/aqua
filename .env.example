# Norwegian Aquaculture Regulatory Monitor - Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# AI API Keys (choose one or both)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# Email Configuration (SendGrid)
# =============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-key-here
EMAIL_FROM_ADDRESS=alerts@aquaregwatch.no
EMAIL_FROM_NAME=AquaRegWatch Norway

# Gmail Alternative (less recommended for production)
# GMAIL_ADDRESS=your-email@gmail.com
# GMAIL_APP_PASSWORD=your-app-password

# =============================================================================
# Slack Configuration
# =============================================================================
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_DEFAULT_CHANNEL=#aquaculture-alerts

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite:///data/aquaregwatch.db

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_NAME=AquaRegWatch Norway
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
TIMEZONE=Europe/Oslo

# =============================================================================
# Monitoring Settings
# =============================================================================
DEFAULT_CHECK_INTERVAL_HOURS=4
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=generate-a-strong-secret-key-here
API_KEY=your-api-key-for-clients

# =============================================================================
# Visualping (Optional - for hybrid approach)
# =============================================================================
VISUALPING_API_KEY=your-visualping-key-if-using
